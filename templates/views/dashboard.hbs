{{>header}}
{{>headerBanner}}



<div class="container my-5">
    <table class="table table-hover table-dark">
        <thead>
            <tr>
            <th scope="col">#</th>
            <th scope="col">Product</th>
            <th scope="col">Price</th>
            <th scope="col">Image</th>
            <th scope="col">Id</th>
            <th scope="col"></th>
            </tr>
        </thead>
        <tbody>

            {{#each products}}
                <tr>
                    <th scope="row">{{inc @index}}</th>
                    <td><input class={{this.product}} type="text" value={{this.product}}></td>
                    <td><input class={{this.product}} type="text" value={{this.price}}></td>
                    <td><input class={{this.product}} type="image" src={{this.image}} width="50"></td>
                    <td><input class={{this.product}} type="text" value={{this._id}} readonly></td>
                    <td><input class={{this.product}} style="display:none;" type="file"></td>
                    <td class="remove-pr"><a style="color: white; cursor: pointer" ><i class="fas fa-times"></i></a></td>
                </tr>
            {{/each}}

            <tr id='last-tr'>
                <th scope="row" colspan="6" class="text-center"><button id="btnAddRow" class="btn btn-lg btn-light">+</button></th>
            </tr> 
        </tbody>
    </table>

</div>


{{>footer}}